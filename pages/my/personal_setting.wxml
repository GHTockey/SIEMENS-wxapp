            <text>隐私协议</text>
            <image style="width: 24rpx;" src="../../static/next.svg" mode="widthFix"></image>
        </view>
        <view class="option-item">
            <text>订阅设置</text>
            <image style="width: 24rpx;" src="../../static/next.svg" mode="widthFix"></image>
