            <image style="width: 24rpx;" src="../../static/next.svg" mode="widthFix"></image>
        </view>
        <view class="option-item" bind:tap="myNavigateTo" data-url="/pages/agreement_content/agreement_content?type=agreement">
            <text>用户协议</text>
            <image style="width: 24rpx;" src="../../static/next.svg" mode="widthFix"></image>
        </view>
